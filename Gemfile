source 'https://rubygems.org'

gem 'rails', '3.2.13'
gem 'mysql2' # Application database
gem 'devise' # User authentication
gem 'jquery-rails' # jQuery
gem 'therubyracer'
gem 'omniauth' # Omniauth Gem
gem 'omniauth-facebook' # Omniauth for facebook Gem
gem 'less-rails'
gem 'twitter-bootstrap-rails', 
  :git => 'git://github.com/seyhunak/twitter-bootstrap-rails.git' # Bootstrap

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
end

group :test do
end

group :development, :test do
  gem 'rspec-rails'
end

